@model Company

<div class="card shadow border-0 my-2">
    <div class="card-body">
        <div class="card-header bg-warning bg-gradient pb-3 text-center">
            <div class="row">
                <div class="col-12">
                    <h2 class="text-primary">@(Model.Id==0 ? "Create" : "Update") Company</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body p-3">
        <div class="row">
            <div class="shadow border-1 col-10">
                <form method="post">
                    
                    <input asp-for="Id" hidden />
                    <div asp-validation-summary="All"></div>
                    <div class="mb-3 p-0">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-bg-danger"></span>
                    </div>

                    <div class="mb-3 p-0">
                        <label asp-for="PhoneNumber"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-bg-danger"></span>
                    </div>

                    <div class="mb-3 p-0">
                        <label asp-for="City"></label>
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-bg-danger"></span>
                    </div>

                    <div class="mb-3 p-0">
                        <label asp-for="State"></label>
                        <input asp-for="State" class="form-control" />
                        <span asp-validation-for="State" class="text-bg-danger"></span>
                    </div>

                    <div class="mb-3 p-0">
                        <label asp-for="StreetAddress"></label>
                        <input asp-for="StreetAddress" class="form-control" />
                        <span asp-validation-for="StreetAddress" class="text-bg-danger"></span>
                    </div>

                    <div class="mb-3 p-0">
                        <label asp-for="PostalCode"></label>
                        <input asp-for="PostalCode" class="form-control" />
                        <span asp-validation-for="PostalCode" class="text-bg-danger"></span>
                    </div>



                    <div class="row pb-4">
                        <div class="col-6">
                            @if (Model.Id==0)
                            {
                                <button type="submit" class="btn btn-primary form-control">Add Company</button>
                            }
                            else
                            {

                                <button type="submit" class="btn btn-primary form-control">Update Company</button>
                            }

                        </div>
                        <div class="col-6">

                            <a asp-controller="Company" asp-action="CompanyList" class="btn btn-secondary border form-control">Back to List</a>
                        </div>
                    </div>



                </form>
            </div>

        </div>

    </div>


</div>




@*  For clint Side validation *@
@section Scripts {
    @{
        <partial name="_Validationscriptspartial" />
    }
}