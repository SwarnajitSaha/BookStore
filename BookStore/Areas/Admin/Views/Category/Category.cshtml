@model List<Category>

<div class="card shadow border-0 mt-3">
    <div class="card-header bg-dark bg-gradient">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">Category List</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="row pt-4 pb-3">
            <div class="col-6"></div>

            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="CreateCategory" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> New Category
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped text-center">
            <thead class="thead-dark text-center">
                <tr>
                    <th>Name</th>
                    <th>Display Order</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr class="pt-2">
                        <td>@obj.CategoryName</td>
                        <td>@obj.DisplayOrder</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                @* asp-route-anyName will send the id to the controller after clicking the edit button *@
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary m-2">
                                    <i class="bi bi-pencil-square">Edit</i>
                                </a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger m-2">
                                    <i class="bi bi-trash3-fill">Delete</i>
                                </a>
                            </div>
                        </td>
                    </tr>


                }
            </tbody>
        </table>
    </div>
</div>

