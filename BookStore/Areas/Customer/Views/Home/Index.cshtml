@model IEnumerable<Product>

<div class="row pb-3">
    @foreach(var obj in Model)
    {
        <div class="col-lg-3 col-sm-6 shadow-sm">
            <div class="row p-2">
                <div  class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-5 rounded ">
                        <img src="@obj.ImageUrl" class="card-img-top rounded">
                    </div>
                    <div class="card-body pb-0">
                        <div class="pl-1">
                            <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@obj.Title</p>
                            <p class="card-title text-warning text-center">by @obj.Author </p>
                        </div>
                        <div class="pl-1">
                             
                             <p class="text-dark text-opacity-75 text-center">Price <span>@obj.Price.ToString("c")</span></p>
                            <p class="text-dark text-opacity-75 text-center">As low as: <span>@obj.Price100.ToString("c")</span></p>
                        </div>
                        <a asp-controller="Home" asp-action="Details" asp-route-productID="@obj.Id" class="btn btn-primary bg-gradient border-0 form-control">
                            Details
                        </a>
                    </div>

                </div>
            </div>
        </div>


    }
</div>


