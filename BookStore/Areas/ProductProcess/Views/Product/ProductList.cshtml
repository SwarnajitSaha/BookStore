@model List<Product>

<div class="card shadow border-0 m-3">
    <div class="card-header bg-danger bg-gradient ml-3 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Product List</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6"></div>

            <div class="col-6 text-end">
                <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> New Product
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead class="thead-dark text-center">
                <tr>
                    <th>Title</th>
                    <th>ISBN</th>
                    <th>Price</th>
                    <th>Author</th>
                    <th>Category</th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="table-group-divider">

                @foreach (var obj in Model)
                {
                    <tr class="pt-2">
                        <td>@obj.Title</td>
                        <td>@obj.ISBN</td>
                        <td>@obj.Price</td>
                        <td>@obj.Author</td>
                        <td>@obj.Category.CategoryName </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                @* asp-route-anyName will send the id to the controller after clicking the edit button *@
                                <a asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary m-2">
                                    <i class="bi bi-pencil-square">Edit</i>
                                </a>
                                <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger m-2">
                                    <i class="bi bi-trash3-fill">Delete</i>
                                </a>
                            </div>
                        </td>
                    </tr>


                }
            </tbody>
        </table>
    </div>
</div>

