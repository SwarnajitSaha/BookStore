@model Product

<form method="post">
    <div class="card border-0 p-3 my-4">
        <div class="pb-3">
            <h2 class="text-primary">Edit Product</h2>
        </div>

        <div asp-validation-summary="All"></div>
        <div class="mb-3 p-0">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-bg-danger"></span>
        </div>

        <div class="mb-3 p-0">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-bg-danger"></span>
        </div>

        <div class="mb-3 p-0">
            <label asp-for="ISBN"></label>
            <input asp-for="ISBN" class="form-control" />
            <span asp-validation-for="ISBN" class="text-bg-danger"></span>
        </div>

        <div class="mb-3 p-0">
            <label asp-for="Author"></label>
            <input asp-for="Author" class="form-control" />
            <span asp-validation-for="Author" class="text-bg-danger"></span>
        </div>

        <div class="mb-3 p-0">
            <label asp-for="ListPrice"></label>
            <input asp-for="ListPrice" class="form-control" />
            <span asp-validation-for="ListPrice" class="text-bg-danger"></span>
        </div>

        <div class="mb-3 p-0">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-bg-danger"></span>
        </div>

        <div class="mb-3 p-0">
            <label asp-for="Price50"></label>
            <input asp-for="Price50" class="form-control" />
            <span asp-validation-for="Price50" class="text-bg-danger"></span>
        </div>

        <div class="mb-3 p-0">
            <label asp-for="Price100"></label>
            <input asp-for="Price100" class="form-control" />
            <span asp-validation-for="Price100" class="text-bg-danger"></span>
        </div>



        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-primary form-control">Edit Product</button>
            </div>
            <div class="col-6">
                <a asp-controller="Product" asp-action="ProductList" class="btn btn-secondary border form-control">Back to List</a>
            </div>
        </div>
    </div>


</form>

@*  For clint Side validation *@
@section Scripts {
    @{
        <partial name="_Validationscriptspartial" />
    }
}